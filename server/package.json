    "http-status-codes": "^2.2.0",
    "mongoose": "^6.8.1",
    "morgan": "^1.10.0",
    "winston": "^3.8.2",
    "winston-mongodb": "^5.1.0",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.7",
    "@babel/preset-env": "^7.20.2",
    "babel-jest": "^29.3.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "eslint": "^8.30.0",
